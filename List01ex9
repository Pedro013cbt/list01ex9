
class Program {
  public static void Main (string[] args) 
 { double r;
            double d;
            double a;

            Console.Write("informe o valor do diâmetro: ");
            d = double.Parse(Console.ReadLine());

            r = d / 2;

            a = Math.PI * Math.Pow(r, 2);

            Console.WriteLine("o valor da área é: {0}", a);
            
    
  }
